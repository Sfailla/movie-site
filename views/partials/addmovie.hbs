<section id="add-movie">

    <div class="form-wrapper">
        <div class="addmovie-container">
            <h1 id="section center-text">Add Movie</h1>

        <form action="/api/addMovie" method="post" class="form">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="enter a movie title" name="title">
            </div>
            <div class="form-group">
                <label for="genre">Genre</label>
                <select id="genre" name="genre">
                    <option value="action">Action</option>
                    <option value="suspense">Suspense</option>
                    <option value="romance">Romance</option>
                    <option value="horror">Horror</option>
                    <option value="drama">Drama</option>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" class="form-control" placeholder="enter a movie description" id="description" cols="30" rows="10"></textarea>
            </div>
            <div class="form-group">
                <label for="director">Director</label>
                <input type="text" class="form-control" id="director" placeholder="enter a movie director" name="director">
            </div>
            <div class="form-group">
                <label for="starring">Starring</label>
                <input type="text" class="form-control" id="starring" placeholder="enter the actor/actress name" name="starring">
            </div>
            <div class="form-group">
                <label for="img_url">Movie Image URL</label>
                <input type="text" class="form-control" id="img_url" placeholder="enter a valid movie image URL" name="img_url">
            </div>
                <button type="submit" id="addMovie">Add Movie</button>            
        </form>
      </div>
    </div>
</section>